    <appender name="RollingFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/momagic.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/momagic-%d{yyyy-MM-dd}.log.gz
            </fileNamePattern>
            <MaxHistory>90</MaxHistory>
        </rollingPolicy>
    </appender>

<!--    &lt;!&ndash; LOG everything at INFO level &ndash;&gt;-->
<!--    <root level="info">c-->
<!--        <appender-ref ref="Console"/>-->
<!--    </root>-->

    <!-- LOG "com.baeldung*" at TRACE level -->
    <logger name="com.example.moreceiverapp" level="trace" additivity="false">
        <appender-ref ref="RollingFile"/>
<!--        <appender-ref ref="Console"/>-->
    </logger>

    <logger name="com.example.moreceiverapp" level="debug" additivity="false">
        <appender-ref ref="RollingFile"/>
<!--        <appender-ref ref="Console"/>-->
    </logger>

    <logger name="com.example.moreceiverapp" level="error" additivity="false">
        <appender-ref ref="RollingFile"/>
<!--        <appender-ref ref="Console"/>-->
    </logger>

    <logger name="com.example.moreceiverapp" level="info" additivity="false">
        <appender-ref ref="RollingFile"/>
<!--        <appender-ref ref="Console"/>-->
    </logger>


</configuration>
